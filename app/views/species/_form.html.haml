= form_for @species do |f|
  - if @species.errors.any?
    #error_explanation
      %h2= "#{pluralize(@species.errors.count, "error")} prohibited this species from being saved:"
      %ul
        - @species.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .field
    = f.label :potential_biomass
    = f.text_field :potential_biomass, class: "form-control"
  .field
    = f.label :species_family_id
    = f.collection_select(:species_family_id, SpeciesFamily.all, :id, :name, {}, {:class=>'form-control'})
  .field
    = f.label :threat_status
    = f.text_field :threat_status, class: "form-control"
  .field
    = f.label :sa_endemic
    = f.text_field :sa_endemic, class: "form-control"
  .field
    %label
      Synonym of 
    = f.text_field :sysnonym_of, class: "form-control"
  .field
    = f.label :common_name
    = f.text_field :common_name, class: "form-control"
  .field
    = f.label :life_cycle
    = f.text_field :life_cycle, class: "form-control"
  .field
    = f.label :growth_forms
    = f.text_field :growth_forms, class: "form-control"
  .field
    = f.label :min_hieght
    = f.text_field :min_hieght, class: "form-control"
  .field
    = f.label :max_height
    = f.text_field :max_height, class: "form-control"
  .field
    = f.label :min_altitude
    = f.text_field :min_altitude, class: "form-control"
  .field
    = f.label :max_altitude
    = f.text_field :max_altitude, class: "form-control"
  .field
    = f.label :distribution
    = f.text_field :distribution, class: "form-control"
  .clear-20
  .actions
    = f.submit 'Save', class: "btn btn-success pull-right"
