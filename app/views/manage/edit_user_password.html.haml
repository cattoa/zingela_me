%h1.page-header
  Edit
  %small
    =@user.email
.col-lg-10
  = form_for(@user, url: "/update/user/password/#{@user.id}") do |f|
    %h4
      %b
        = f.label :company_id
      = @user.company.company_name
    %h4
      %b
        = f.label :email
      = @user.email
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", class: "form-control max-200"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control max-200"
    .clear-20
    .actions
      = f.submit "Update", class: "btn btn-success pull-right"
