%h1.page-header
  Edit
  %small
    =@user.email
.col-lg-10
  = form_for(@user, url: "/update/user/#{@user.id}") do |f|
    .field
      = f.label :company_id
      %br/
      = f.collection_select(:company_id, Company.all, :id, :company_name, {}, {:class=>'form-control'})
    .field
      = f.label :email
      %br/
      = f.email_field :email, class: "form-control max-200"
    .clear-20
    .actions
      = f.submit "Update", class: "btn btn-success pull-right"
