= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .field
    = f.label :country
    = f.text_field :country, class: "form-control"
  .field
    = f.label :province
    = f.text_field :province, class: "form-control"
  .field
    = f.label :city
    = f.text_field :city, class: "form-control"
  .field
    = f.label :address_1
    = f.text_field :address_1, class: "form-control"
  .field
    = f.label :address_2
    = f.text_field :address_2, class: "form-control"
  .clear-20
  .actions
    = f.submit 'Save', class: "btn btn-success pull-right"
