%h1.page-header
  Show All Companies
-if(@companies)
  %table.table
    %tr
      %th
        Id
      %th
        Name
      %th
        Company Name
    -@companies.each do |company|
      %tr
        %td
          = company.id
        %td
          = company.email
        %td
          = company.company_name

-else
  %p No data found
= link_to 'Back', field_data_path, class: "btn btn-default"
