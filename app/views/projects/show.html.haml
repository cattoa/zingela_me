%h1.page-header
  Show
  %small
    Project
.col-lg-10
  %h4
    %b Name:
    = @project.name
  %h4
    %b Start date:
    = @project.start_date
  %h4
    %b Expected delivery date:
    = @project.expected_delivery_date
  %h4
    %b Actual delivery date:
    = @project.actual_delivery_date
  %h4
    %b Active:
    = @project.active
  %h4
    %b Date changed:
    = @project.date_changed
  %h4
    %b User:
    - if User.exists?(@project.user_id)
      = User.find(@project.user_id).email
    - else
      %span.error
        User Deleted

  = link_to 'Edit', edit_project_path(@project), class: "btn btn-primary"
  = link_to 'Back', projects_path, class: "btn btn-default"
