= form_for @species_family do |f|
  - if @species_family.errors.any?
    #error_explanation
      %h2= "#{pluralize(@species_family.errors.count, "error")} prohibited this species_family from being saved:"
      %ul
        - @species_family.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name, class: "form-control"
  .clear-20

  .actions
    = f.submit 'Save',class: "btn btn-success pull-right"
